@article{10.1186/s12936-021-03976-9, 
year = {2021}, 
title = {{The effect of long-lasting insecticidal nets (LLINs) physical integrity on utilization}}, 
author = {Hiruy, Honelgn Nahusenay and Zewde, Ayele and Irish, Seth R and Abdelmenan, Semira and Woyessa, Adugna and Wuletaw, Yonas and Solomon, Hiwot and Haile, Mebrahtom and Sisay, Achamyelesh and Chibsa, Sheleme and Worku, Alemayehu and Yukich, Josh and Berhane, Yemane and Keating, Joseph}, 
journal = {Malaria Journal}, 
