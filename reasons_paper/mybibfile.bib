@article{10.1371/journal.pone.0081966, 
year = {2013}, 
title = {{Barriers to Malaria Control among Marginalized Tribal Communities: A Qualitative Study}}, 
author = {Sundararajan, Radhika and Kalkonde, Yogeshwar and Gokhale, Charuta and Greenough, P. Gregg and Bang, Abhay}, 
